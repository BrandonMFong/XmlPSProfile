{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build current file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"${workspaceFolder}\\Build\\*.o",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-I${workspaceFolder}\\Sources",
				"-std=c++17"
				// "-lstdc++fs",
				// "-lssl",
				// "-lcrypto",
				// "-lpthread",
				// "-ldl"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}